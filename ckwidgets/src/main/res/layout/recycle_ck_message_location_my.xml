<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="right"
    android:layout_marginBottom="@dimen/dimen_5"
    android:layout_marginLeft="@dimen/dimen_50"
    android:layout_marginRight="@dimen/dimen_5"
    android:layout_marginTop="@dimen/dimen_5"
    android:background="@drawable/bg_ck_message_me"
    android:backgroundTint="@color/color_ck_bubble_me"
    android:gravity="center_vertical|right"
    android:maxWidth="@dimen/dimen_300"
    android:orientation="vertical">

    <ProgressBar
        android:layout_width="@dimen/dimen_30"
        android:layout_height="@dimen/dimen_30"
        android:layout_gravity="center"
        android:indeterminateTint="@color/color_ck_accent_inner"
        android:progressTint="@color/color_ck_accent_inner" />

    <ImageView
        android:id="@+id/image_map"
        style="@style/styleCropImageCenter"
        android:layout_width="@dimen/dimen_150"
        android:layout_height="@dimen/dimen_150" />

</FrameLayout>