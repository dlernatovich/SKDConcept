<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="66dp"
    android:background="@color/color_ck_background_channels_list">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="66dp"
            android:layout_height="match_parent"
            android:layout_margin="8dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:src="@drawable/user_group_tinted"
                android:tint="@color/color_ck_accent" />
        </FrameLayout>

        <com.artlite.bslibrary.ui.fonted.BSTextView

            android:id="@+id/label_group_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="User Name"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_18"
            android:textStyle="bold" />

    </LinearLayout>


</FrameLayout>