<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_ck_background_channels_list"

    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1px"
        android:minHeight="@dimen/dimen_60"
        android:orientation="horizontal">

        <View
            android:id="@+id/view_unread"
            android:layout_width="@dimen/dimen_6"
            android:layout_height="@dimen/dimen_6"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dimen_5"
            android:background="@drawable/background_accent_circle"
            android:backgroundTint="@android:color/holo_orange_dark"
            android:minHeight="@dimen/dimen_8"
            android:minWidth="@dimen/dimen_8" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="5dp">

            <ImageView
                android:id="@+id/image_group"
                android:layout_width="@dimen/dimen_50"
                android:layout_height="@dimen/dimen_50"
                android:layout_gravity="center"
                android:minHeight="@dimen/dimen_50"
                android:src="@drawable/user_group_tinted"
                android:tint="@color/accent" />

            <FrameLayout
                android:id="@+id/view_circle_name"
                android:layout_width="@dimen/dimen_50"
                android:layout_height="@dimen/dimen_50"
                android:layout_gravity="center"
                android:background="@drawable/background_accent_circle"
                android:backgroundTint="@color/color_ck_accent">

                <com.artlite.bslibrary.ui.fonted.BSTextView
                    android:id="@+id/label_short_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:maxLength="2"
                    android:text="NA"
                    android:textAllCaps="true"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/text_20"
                    android:textStyle="bold" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/image_channel_avatar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </FrameLayout>

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.artlite.bslibrary.ui.fonted.BSTextView
                    android:id="@+id/label_channel_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:maxLines="2"
                    android:text="Channel name"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/text_20"
                    android:textStyle="bold" />

                <com.artlite.bslibrary.ui.fonted.BSTextView
                    android:id="@+id/label_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_5"
                    android:layout_marginRight="@dimen/dimen_5"
                    android:text="Yesterday"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="@dimen/text_14" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/image_type"
                    style="@style/styleCropImageCenter"
                    android:layout_width="@dimen/dimen_18"
                    android:layout_height="@dimen/dimen_18"
                    android:layout_marginRight="@dimen/dimen_5"
                    android:layout_marginTop="@dimen/dimen_2"
                    android:src="@mipmap/ic_ck_message"
                    android:tint="@color/color_ck_accent" />

                <com.artlite.bslibrary.ui.fonted.BSTextView
                    android:id="@+id/label_last_message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:maxLines="5"
                    android:minHeight="@dimen/dimen_18"
                    android:text="Channel description"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="@dimen/text_18" />


            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_gravity="bottom"
        android:background="@android:color/darker_gray" />
</FrameLayout>