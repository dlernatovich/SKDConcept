<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="66dp"
    android:background="@color/color_ck_background_groups_list">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="66dp"
            android:layout_height="match_parent"
            android:layout_margin="8dp">

            <FrameLayout
                android:layout_width="@dimen/dimen_50"
                android:layout_height="@dimen/dimen_50"
                android:layout_gravity="center"
                android:background="@drawable/bg_ck_accent_circle"
                android:backgroundTint="@color/color_ck_accent_inner">

                <ImageView
                    android:layout_width="@dimen/dimen_50"
                    android:layout_height="@dimen/dimen_50"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_ck_user_group_tinted"
                    android:tint="@color/color_ck_background_groups_avatar_view" />
            </FrameLayout>
        </FrameLayout>

        <com.artlite.bslibrary.ui.fonted.BSTextView
            android:id="@+id/label_group_name"
            style="@style/style_h1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="User Name"
            android:textColor="@color/color_ck_text_groups_name" />

    </LinearLayout>


</FrameLayout>