<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="right"
    android:layout_margin="@dimen/dimen_5"
    android:background="@drawable/bg_ck_message_me"
    android:backgroundTint="@color/color_ck_bubble_me"
    android:gravity="center"
    android:orientation="vertical">

    <com.artlite.bslibrary.ui.fonted.BSTextView
        android:id="@+id/label_type"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_gravity="right"
        android:background="@drawable/bg_ck_round_gray"
        android:textColor="@color/color_ck_accent_inner"
        android:textSize="@dimen/text_16"
        android:backgroundTint="@color/color_ck_warning"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/dimen_30"
            android:layout_height="@dimen/dimen_30"
            android:src="@mipmap/ic_ck_unknown"
            android:tint="@android:color/white" />

        <com.artlite.bslibrary.ui.fonted.BSTextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dimen_5"
            android:gravity="center_vertical"
            android:text="@string/text_ck_widget_not_support"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_18"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>