<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="left"
    android:layout_margin="@dimen/dimen_5"
    android:background="@drawable/bg_ck_message_other"
    android:backgroundTint="@color/color_ck_bubble_other"
    android:gravity="center"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="@dimen/dimen_30"
        android:layout_height="@dimen/dimen_30"
        android:src="@mipmap/ic_ck_unknown"
        android:tint="@color/color_ck_accent" />

    <com.artlite.bslibrary.ui.fonted.BSTextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dimen_5"
        android:gravity="center_vertical"
        android:text="@string/text_ck_widget_not_support"
        android:textColor="@color/color_ck_accent"
        android:textSize="@dimen/text_18"
        android:textStyle="bold" />

</LinearLayout>