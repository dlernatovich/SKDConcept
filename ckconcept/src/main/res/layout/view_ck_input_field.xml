<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dimen_5"
    android:layout_marginRight="@dimen/dimen_5"
    android:layout_marginTop="@dimen/dimen_5"
    android:background="@color/color_ck_background_chat_input_background"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/input_actions_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/dimen_5"
        android:orientation="horizontal" />

    <EditText
        android:id="@+id/input_edit_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/dimen_5"
        android:layout_marginRight="@dimen/dimen_5"
        android:layout_weight="1"
        android:textColor="@android:color/black"
        android:background="@drawable/bg_ck_round_gray"
        android:hint="@string/text_ck_input_prompt_message"
        android:inputType="textCapSentences|textShortMessage|textImeMultiLine|textMultiLine" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/input_send_enabled"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ic_ck_input_send"
            android:tint="@android:color/white"
            android:visibility="invisible"
            app:fabSize="mini" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/input_send_disabled"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ic_ck_input_send"
            android:tint="@color/input_darker_gray"
            app:backgroundTint="@color/input_lighter_gray"
            app:fabSize="mini" />

    </FrameLayout>

</LinearLayout>